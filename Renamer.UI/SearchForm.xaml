<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Renamer.UI" x:Class="Renamer.UI.SearchForm"
             x:Name="SearchFormCtrl" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

   <Grid>
      <TextBox x:Name="SearchTerm" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="236"/>
      <Button x:Name="DoSearch" Content="Go" HorizontalAlignment="Left" Margin="251,10,0,0" VerticalAlignment="Top" Width="39" Height="23"/>
      <ListView x:Name="SearchResults" HorizontalAlignment="Left" Height="252" Margin="10,38,0,0" VerticalAlignment="Top" Width="280">
         <ListView.View>
            <GridView>
               <GridViewColumn/>
            </GridView>
         </ListView.View>
      </ListView>

   </Grid>
</UserControl>
